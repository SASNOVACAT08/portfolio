---
interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;
---

<img class="avatar" src={src} alt={alt} />

<style>
  .avatar {
    max-width: 100%;
    max-height: 100%;
    border-radius: 50%;
    border: 0.25rem solid var(--color-primary);
    box-sizing: border-box;
  }
</style>
