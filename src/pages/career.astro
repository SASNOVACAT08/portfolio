<style>
  .career {
    /* text-align: center; */
    position: relative;
  }

  .career::before {
    content: "";
    position: absolute;
    left: -2rem;
    height: 100%;
    border-left: 0.25rem solid var(--color-primary);
    border-radius: 6px;
  }

  .career__title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .career__date {
    font-size: 1rem;
    font-weight: 500;
    margin-bottom: 1rem;
    opacity: 0.8;
  }

  .career__content {
    font-size: 1rem;
    font-weight: 400;
  }
</style>
