---
import Navbar from "../components/Navbar.astro";
import "../styles/reset.css";
import "../styles/global.css";
import Sidebar from "../components/Sidebar.astro";
import template from "../template";

export interface Props {
  title: string;
}

const { title } = Astro.props;

const { primaryColor } = template;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="default">
    <header class="default__header">
      <Navbar />
    </header>
    <aside class="default__sidebar">
      <Sidebar />
    </aside>
    <main class="default__main">
      <slot />
    </main>
  </body>
</html>

<style define:vars={{ primaryColor }}>
  :root {
    --color-light: #f5f5f5;
    --color-primary: var(--primaryColor);
    --color-dark: #464545;
    --color-background: #1c1c1c;
  }

  .default {
    display: grid;
    grid-template-columns: 1fr 3fr;
    grid-template-rows: auto 1fr;
    grid-template-areas:
      "sidebar header"
      "sidebar main"
      "sidebar main";
    max-width: 1000px;
    margin: 4rem auto 0 auto;
  }

  .default__header {
    margin: 0 auto 2rem auto;
    grid-area: header;
  }

  .default__sidebar {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 2rem;
    grid-area: sidebar;
  }

  .default__main {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 2rem;
    grid-area: main;
  }
</style>
